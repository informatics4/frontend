extends layout

block content
    //- form
    .col-md-12
        .card
            .header
                h4.title Enter new Lock command
            .content
                form
                    .row
                        .col-md-4
                            .form-group
                                label Room
                                input(type="text")
                        .col-md-4
                            .form-group
                                label Classification
                                input(type="text")
                        .col-md-4
                            .form-group
                                label Action
                                input(type="text")
                    .row(style="padding-right:10px")
                        input.btn.btn-info.btn-fill.pull-right(type="submit", value="Save")
    //- Table 
    .col-md-12
        .card
            .header
                h4.title Room Lock information
                p.category Locked rooms
            .content.table-responsive.table-full-width
                table.table.table-hover.table-striped
                    thead
                        th Room
                        th Status
                        th Action
                    tbody
                        tr
                            td Room 12
                            td open
                            td 
                                input(type="button", value="Open")
                                input(type="button", value="Lock")


