extends layout

block content
    //- form
    .col-md-12
        .card
            .header
                h4.title Enter new contact
            .content
                form
                    .row
                        .col-md-4
                            .form-group
                                label Email address
                                input(type="text")
                        .col-md-4
                            .form-group
                                label Phone number
                                input(type="text")
                        .col-md-4
                            .form-group
                                label Role
                                input(type="text")
                    .row(style="padding-right:10px")
                        input.btn.btn-info.btn-fill.pull-right(type="submit", value="Save")
    //- Table 
    .col-md-12
        .card
            .header
                h4.title Contact information
                p.category emergency contacts
            .content.table-responsive.table-full-width
                table.table.table-hover.table-striped
                    thead
                        th Contact email
                        th Contact phone number
                        th role
                    tbody
                        th Brianphiri@email.com
                        th 0786374030
                        th student


