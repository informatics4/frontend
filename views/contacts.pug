extends layout

block content
    //- form
    .col-md-12
        .card
            .header
                h4.title ENTER NEW CONTACT
            .content
                form(action="contacts", method="POST")
                    .row
                        .col-md-4
                            .form-group
                                label Email address
                                input.form-control(type="text", name="email")
                        .col-md-4
                            .form-group
                                label Phone number
                                input.form-control(type="text", name="phoneNumber")
                        .col-md-4
                            .form-group
                                label Role
                                select#inputState.form-control(name="role")
                                    option(value="student",selected='') Student
                                    option(value="staff") Staff
                                    option(value="guardian") Guardian
                                    option(value="security") Security
                    .row(style="padding-right:10px")
                        input.btn.btn-info.btn-fill.pull-right(type="submit", value="Save")
    //- Table 
    .col-md-12
        .card
            .header
                h4.title Contact information
                p.category emergency contacts
            .content.table-responsive.table-full-width
                table.table.table-hover.table-striped
                    thead
                        th Contact email
                        th Contact phone number
                        th role
                    tbody
                        each val in data
                            tr
                                th=val.email
                                if val.phoneNumber
                                    th=val.phoneNumber
                                else
                                    th N/A
                                th=val.role



